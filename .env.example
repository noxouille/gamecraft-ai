# GameCraft AI Environment Configuration
# Copy this file to .env and fill in your API keys

# Application Settings
APP_NAME="GameCraft AI"
DEBUG=false
HOST=0.0.0.0
PORT=8000

# API Keys (Required for full functionality)
# Get OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Get YouTube Data API key from: https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# Get IGDB credentials from: https://api.igdb.com/
IGDB_CLIENT_ID=your_igdb_client_id_here
IGDB_ACCESS_TOKEN=your_igdb_access_token_here

# Cache Settings (Optional - uses memory cache if not set)
# REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Processing Settings
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/gamecraft_ai.log
